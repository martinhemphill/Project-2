{{> nav/nav-block user=true register=false}}

<!--Card for user Profile-->
<section class="row userRow">
  <div class="col-md-6">
    <div class="card mb-3" style="max-width: 540px;">
      <div class="card-header"> {{userInfo.firstName}} </div>
      <div class="col-md-12">
        <div class="card-body" id="cardBody1">
          <div class="row">
            <div class="col-md-12">
              <p class="card-text id=" member-since"">Member since {{memberSince}}</p>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <p class="card-text">**Books read area**</p>
            </div>
          </div>
          <div class="row">
            <button id="btnReview" data-toggle="modal" data-target="#myModal1" type="button">Followers</button>
            <button id="btnReview" data-toggle="modal" data-target="#myModal1" type="button">Following</button>
            {{#each userInfo.followees}}
              <div>{{this.firstName}} {{this.lastName}}</div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!--Card for the users have read-->
  <div class="col-md-6" id="haveReadCard">
    <div class="card mb-3" style="max-width: 18rem;">
      <div class="card-header">Have Read</div>
      <div class="card-body" id="cardBody2">
        <ul class='future-list'>
          {{#each pastList}}
          <p>{{title}}</p>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</section>

<!--Card for the users Reading Now-->
<section class="row readNowRow">
  <div class="col-md-6">
    <div class="card mb-3" style="max-width: 540px;">
      <div class="card-header">Reading Now</div>
      <div class="col-md-12">
        <div class="card-body" id="cardBody3">
          <ul class='present-list'>
            {{#each currentList}}
          <p>{{title}}</p>
          {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!--Card for the users TBR-->
  <div class="col-md-6" id="readCard">
    <div class="card mb-3" style="max-width: 18rem;">
      <div class="card-header">TBR</div>
      <div class="card-body" id="cardBody4">
        <ul class='future-list'>
          {{#each futureList}}
          <p>{{title}}</p>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</section>

<br>
<br>

